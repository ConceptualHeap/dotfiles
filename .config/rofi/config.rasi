/*****----- mode switcher -----*****/
mode-switcher{
    enabled:                     true;
    spacing:                     16px;
    margin:                      0px;
    padding:                     0px 256px;
    background-color:            transparent;
    text-color:                  @foreground;
}
button {
    padding:                     12px;
    border-radius:               0px;
    background-color:            @foreground-alt;
    text-color:                  inherit;
    cursor:                      pointer;
    border-radius:               8px;
}
button selected {
    //background-color:            var(urgent);
    //text-color:                  var(background);
    background-color:            @foreground-alt;
    text-color:                  @foreground;
    border:                      1px;
    border-color:                @error-container;
}
