@import "colors.rasi"

configuration {
  modi: "drun,run,window,emoji,calc";
  show-icons: true;
  display-drun: " ";
  display-run: " ";
  display-window: " ";
  display-emoji: "󰞅 ";
  display-calc: "󰿉 ";
  drun-display-format: "{name}";
  hover-select: true;
  me-select-entry: "";
  me-accept-entry: "!MousePrimary";
}

* {
  font: "JetBrainsMono Nerd Font 12";

  background: @surface;
  background-alt: @surface-container;
  foreground: @on-surface;
  foreground-alt: @outline;

  border-radius-l: 8px;
  border-radius-m: 4px;
  border-radius-s: 2px;
}

window {
  transparency: "real";
  location: south west;
  anchor: center;
  fullscreen: false;
  x-offset: 0px;
  y-offset: 0px;

  enabled: true;
  margin: 8px;
  padding: 0px;
  cursor: "default";
  background-color: @background;
  border: 2px;
  border-color: @foreground;
  border-radius: 8px;
}

mainbox {
  enabled: true;
  padding: 16px;
  spacing: 16px;
  children: [ "imagebox", "listbox" ];
  orientation: horizontal;
  background-color: @background;
}

imagebox {
  background-image: url("currentWal.thumb", height);
  border-radius: 4px;
  children: [ "inputbar" ];
}

listbox {
  children: [ "listview" ];
}

inputbar {
  enabled: true;
  spacing: 16px;
  padding: 16px;
  border: none;
  border-radius: 2px;
  background-color: @foreground;
  text-color: @background;
  children: [ "prompt", "entry" ];
  margin: 16px;
}

prompt {
  enable: true;
  background-color: inherit;
  text-color: inherit;
}

entry {
  enable: true;
  background-color: inherit;
  text-color: inherit;
  cursor: text;
  placeholder: "...";
  placeholder-color: @background-alt;
}

listview {
  enable: true;
  columns: 1;
  lines: 10;
  cycle: true;
  dynamic: true;
  scrollbar: false;
  layout: vertical;
  reverse: false;
  fixed-height: true;
  fixed-columns: false;
  background-color: transparent;
  text-color: @foreground;
  cursor: "default";
  padding: 16px;
  spacing: 24px;
  border: 0px;
}

scrollbar {
  width: 5px;
  border-radius: 10px;
  handle-color: @background-alt;
  background-color: @foreground-alt;
}

element {
  enabled: true;
  border-radius: 0px;
  border: none;
  background-color: transparent;
  text-color: @foreground-alt;
  cursor: "default";
  spacing: 12px;
}

element normal.normal,
element alternate.normal {
    background-color:            transparent;
    text-color:                  @foreground-alt;
}
element normal.urgent,
element alternate.urgent,
element selected.active {
    //background-color:            var(urgent);
    //text-color:                  var(background);
    background-color:            transparent;
    text-color:                  @foreground;
    border-color:                @foreground-alt;
}
element normal.active,
element alternate.active,
element selected.urgent {
    background-color:            transparent;
    text-color:                  @foreground;
    border-color:                @error-container;
}
element selected.normal {
    background-color:            transparent;
    text-color:                  @foreground;
    border-color:                @foreground-alt;
}
element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        24px;
    cursor:                      inherit;
}
element-text {
    background-color:            transparent;
    text-color:                  inherit;
    highlight:                   inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

/*****----- Messages -----*****/
message {
    enabled:                     true;
    padding:                     16px;
    border-radius:               0px;
    background-color:            transparent;
    text-color:                  @foreground;
    border: 0px 0px 2px 0px;
    border-color: @foreground;
}
textbox {
    background-color:            transparent;
    text-color:                  @foreground;
    vertical-align:              0.5;
    horizontal-align:            0.0;
    highlight:                   none;
    placeholder-color:           @foreground;
    blink:                       true;
    markup:                      true;
}
error-message {
    padding:                     30px;
    background-color:            @background;
    text-color:                  @foreground;
    border-radius: 4px;
}

